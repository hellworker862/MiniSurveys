@using MiniSurveys.Web.Models.UserView
@model UserViewModel

<tr>
    <td id="userName">@Model.UserName</td>
    <td>@Model.Name</td>
    <td>@Model.Surname</td>
    <td>@Model.Patronymic</td>
    <td>@Model.Email</td>
    <td>@Model.Phone</td>
    <td>@Model.Department.Name</td>
    <td>@Model.Role</td>
    <td class="td__img">
        <a onclick="showInPopup('@Url.Action("UserEditPartial","Admin",new {userName=Model.UserName},Context.Request.Scheme)')"><img src="~/img/settings.svg" alt=""></a>
        <form asp-action="UserDelete" asp-controller="Admin" asp-route-id="@Model.UserName" onsubmit="return jQueryAjaxDelete('@Model.UserName')">
            <input type="submit" value="" style="background:url(/img/ilusha.svg) no-repeat; height:14px; width:15px;">
        </form>
    </td>
</tr>