@model IEnumerable<MiniSurveys.Web.Models.UserViewModel>

<div class="main-body main__users">
    <div class="main-body__title title">
        <h1>Управление пользователями</h1>
    </div>
    <div class="main__searchandbutton ultrauser__searchandbutton">
        <button class="main__add">+ Добавить</button>
        <div class="main__search">
            <input type="text">
            <img src="../img/search.svg" alt="">
        </div>
    </div>
    <div class="main__table">
        <table>
            <tr>
                <th>Логин</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>E-mail</th>
                <th>Телефон</th>
                <th>Подразделение</th>
                <th>Роль</th>
                <th><img src="../img/pridor.svg" alt=""></th>
            </tr>

            @foreach (var item in Model)
            {
                @await Component.InvokeAsync("RowUser", item)
            }
        </table>
    </div>
</div>